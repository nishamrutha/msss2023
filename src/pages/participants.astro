<style>
    main {
        margin: auto;
        padding: 1.5rem;
        max-width: vw;
        align-items: center;
        align-content: center;
        background-size: 100% 100%;
        background-image: url("/msss2023/MSSS2023_PosterArt.png");
        background-repeat: no-repeat;
        background-attachment: fixed;
    }

    h1 {
        font-size: 3rem;
        font-weight: 800;
        margin: 0;
        color: #FDA5A5;
    }

    h2 {
        font-size: 2rem;
        text-align: center;
        margin: 0;
    }

    body {
        flex-basis: 100%;
        font-size: small;
    }

    p {
        font-size: 1rem;
        text-align: center;
    }

    .button {
        background-color: rgba(0, 0, 255, 0);
        font-size: medium;
        cursor: pointer;
        text-align: center;
        -webkit-text-fill-color: rgba(0, 0, 255, 0);
        margin: 5px;
        justify-content: space-between;
    }

    .anyofimgclass{
        display: block;
        max-width: 100%;
        height: auto;
    }
    .logopic{
        display: block;
        height: auto;
        align-items: center;
        align-self: center;
        margin-left: auto;
        margin-right: auto;
    }
    @media only screen and (max-width: 600px) {
                .logopic {
                  max-width:50%
                }
              }
    @media only screen and (min-width: 601px) {
    .logopic {
        max-width:30%
    }
    }
    .column {
    float: left;
    width: 50%;
    }
    .row {
        display: inline-flex;
        flex-wrap: wrap;
        padding-bottom: 1cm;
    }

    @media only screen and (max-width: 600px) {
                .row {
                  width:100%
                }
              }
    @media only screen and (min-width: 601px) {
    .row {
        width:80%
    }
}

    div {
        display: block;
        text-align: center;
    }

    .text-gradient {
        background-image: var(--accent-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 400%;
        background-position: 0;
    }

    .instructions {
        line-height: 1.6;
        margin: 1rem 0;
        border: 1px solid rgba(var(--accent), 25%);
        background-color: white;
        padding: 1rem;
        border-radius: 0.4rem;
    }

    .instructions code {
        font-size: 0.875em;
        font-weight: bold;
        background: rgba(var(--accent), 12%);
        color: rgb(var(--accent));
        border-radius: 4px;
        padding: 0.3em 0.45em;
    }

    .instructions strong {
        color: rgb(var(--accent));
    }

    .link-card-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
        gap: 1rem;
        padding: 0;
    }
</style>
